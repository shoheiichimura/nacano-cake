<div class="container my-3">
  <div class="row">
    <div class="col">
      <h2 class="m-4 text-center font-weight-bold">会員情報編集</h2>
      <% if @customer.errors.any? %>
        <%= @customer.errors.count %>件のエラーが発生しました
        <ul>
          <% @customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>

 <table class="table table-striped text-center"  style="color:white;">
  <%= form_with model: @customer, url: public_information_path, method: :patch do |f| %>
   <tr>
     <div class="field">
      <th>名前（姓名）</th>
      <td><%= f.text_field :last_name, autofocus: true %></td>
      <td><%= f.text_field :first_name %></td>
      </div>
   </tr>
   <tr>
     <div class="field">
      <th>フリガナ</th>
      <td><%= f.text_field :last_name_kana %></td>
      <td><%= f.text_field :first_name_kana %></td>
      </div>
   </tr>
   <tr>
    <div class="field">
     <th><%= f.label "メールアドレス"%></th>
     <td><%= f.email_field :email %></td>
     <td></td>
     </div>
   </tr>
   <tr>
    <div class="field">
     <th><%= f.label "郵便番号(ハイフンなし)" %></th>
     <td><%= f.text_field :postal_code %></td>
     <td></td>
    </div>
   </tr>
   <tr>
    <div class="field">
     <th><%= f.label "住所" %></th>
     <td><%= f.text_field :address %></td>
     <td></td>
    </div>
   </tr>
   <tr>
    <div class="field">
     <th><%= f.label "電話番号" %></th>
     <td><%= f.text_field :phone_number %></td>
     <td></td>
    </div>
   </tr>
   <tr>
    <td></td>
    <td><%= f.submit "編集内容を保存", class: "btn btn-success"%></td>
    <td><%= link_to "退会する", public_confirm_path, class: 'btn btn-danger'%></td>
   </tr>
  <% end %>
  </table>
 </div>
 </div>

 
