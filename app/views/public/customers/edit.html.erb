<span style="background-color:lightgrey; font-size:30px;">会員情報編集</span>



<%= form_with model: @customer, url: public_information_path, method: :patch do |f| %>


 <table>
   <tr>
     <div class="field">
      <th>名前</th>
      <td>(姓)<%= f.text_field :last_name, autofocus: true %></td>
      <td>(名)<%= f.text_field :first_name %></td>
   </tr>
   <tr>
     <div class="field">
      <th>フリガナ</th>
      <td>(セイ)<%= f.text_field :last_name_kana %></td>
      <td>(メイ)<%= f.text_field :first_name_kana %></td>
      </div>
   </tr>
   <tr>
    <div class="field">
     <th><%= f.label "メールアドレス"%></th>
     <td><%= f.email_field :email %></td>
   </tr>
   <tr>
    <div class="field">
     <th><%= f.label "郵便番号(ハイフンなし)" %></th>
     <td><%= f.text_field :postal_code %></td>
   </tr>
   <tr>
    <div class="field">
     <th><%= f.label "住所" %></th>
     <td><%= f.text_field :address %></td>
    </div>
   </tr>
   <tr>
    <div class="field">
     <th><%= f.label "電話番号" %></th>
     <td><%= f.text_field :phone_number %></td>
    </div>
   </tr>
  </table>



 <div class="actions">
  <%= f.submit "編集内容を保存", class: 'btn btn-primary'%><!--押したらマイページに戻る-->
  <%= link_to "退会する", public_confirm_path class: 'btn btn-danger'%>
 </div>

 <% end %>
