<div class="container">
  <div class="row">
    <div class="col">
      <h4>ショッピングカート</h4>
      <%= link_to "カートを空にする",  public_destroy_all_path, method: :delete %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">商品名</th>
      <th scope="col">単価(税込)</th>
      <th scope="col">数量</th>
      <th scope="col">小計</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_item.each do |cart_item| %>
    <tr>
      <td>
        <%= image_tag cart_item.item.image, size: "50x50" %>
        <%= cart_item.item.name %>
      </td>
        <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
      <td><%= form_with model: cart_item, url: public_cart_item_path(cart_item), methot: :patch do |f| %>
          <%=f.select :quantity, *[1..10] %>
          <%= f.submit "変更" %>
          <% end %>
      </td>
      <td><%= cart_item.subtotal.to_s %></td>
      <td><%= link_to "削除する", public_cart_item_path(cart_item), method: :delete %></td>
    </tr>
   <% end %>
  </tbody>
</table>

<%= link_to "買い物を続ける", public_items_path %>
<table>
  <tr>
    <th>合計金額</th>
     <% @cart_item.each do |cart_item| %>
    <td><% @total += cart_item.subtotal %>
    <% end %>
    <%= @total.to_s(:delimited) %>
    </td>
  </tr>
</table>

<%= link_to "情報入力に進む", new_public_item_path %>
