<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="m-4 text-center font-weight-bold">ショッピングカート</h4>
    </div>
    <div class="row">
      <div class="col mt-5 mb-1 text-light">
      <%= link_to "カートを空にする",  public_destroy_all_path,class: "btn btn-danger", method: :delete %>
      </div>
    </div>
    <table class="table">
     <thead class="thead-dark">
      <tr>
        <th scope="col">商品名</th>
        <th scope="col">単価(税込)</th>
        <th scope="col">数量</th>
        <th scope="col">小計</th>
        <th scope="col"></th>
      </tr>
     </thead>
     <tbody>
      <% @cart_item.each do |cart_item| %>
      <tr>
        <th scope="row">
          <%= image_tag cart_item.item.image, size: "50x50" %>
          <%= cart_item.item.name %>
        </th>
          <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
        <td><%= form_with model: cart_item, url: public_cart_item_path(cart_item), methot: :patch do |f| %>
            <%=f.select :quantity,  [['1個',1], ['2個',2], ['3個',3], ['4個',4], ['5個',5], ['6個',6], ['7個',7], ['8個',8], ['9個',9], ['10個',10]], include_blank: "個数選択" %>
          <%= f.submit "変更" %>
          <% end %>
       </td>
       <td><%= cart_item.subtotal.to_s %></td>
       <td><%= link_to "削除する", public_cart_item_path(cart_item),class: "btn btn-outline-danger", method: :delete %></td>
      </tr>
      <% end %>
     </tbody>
    </table>
   </div>

   <div class="row">
     <%= link_to "買い物を続ける", public_items_path, class: "btn btn-primary" %>
   </div>

   <div class="row offset-8 text-light">
     <table class="table">
      <thead class="thead-dark">
       <tr>
        <th scope="row">合計金額</th>
         <% @cart_item.each do |cart_item| %>
         <% @total += cart_item.subtotal %>
         <% end %>
        <td><%= @total.to_s(:delimited) %>円</td>
       </tr>
      </thead>
     </table>
   </div>

   <div class="container col-8 text-center">
    <% if @cart_products.present? %>
    <%= link_to "情報入力に進む", new_public_item_path, class: "btn btn-success" %>
    <% end %>
   </div>
</div>
