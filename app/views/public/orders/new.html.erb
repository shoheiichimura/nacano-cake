<div class="container">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
          aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
    <span style="background-color:lightgrey; font-size:30px;">注文情報入力</span>
  <div>
        <%= form_with model: @order, url: public_orders_path, method: :post do |f| %>
          <h4>支払い方法</h4>

            <%= f.radio_button :payment_method, "credit_card" %>
            <%= f.label :payment_method, "クレジットカード" %>
            　<br>
            <%= f.radio_button :payment_method, "transfer" %>
            <%= f.label :payment_method, "銀行振込" %>


          <h4>お届け先</h4>
              <%= f.radio_button :address, "address" %>
              <%= f.label :address, "ご自身の住所" %><br>
              〒<%= @customer.postal_code %>　<%= @customer.address %><br>
              <%= @customer.last_name %><%= @customer.first_name %><br>
              <%= f.radio_button :address, "address" %>
              <%= f.label :address, "登録済み住所から選択" %>
              <!--ここに住所のセレクトボックスを入れる-->
              <br>
               <%= f.radio_button :address, "address" %>
               <%= f.label :address, "新しいお届け先" %><br>
               <table>
                 <tr>
                    <div class="field">
                      <th><%= f.label "郵便番号(ハイフンなし)" %></th>
                      <td><%= f.text_field :postal_code,placeholder: "0000000" %></td>
                    </div>
                 </tr>
                 <tr>
                    <div class="field">
                      <th><%= f.label "住所" %></th>
                      <td><%= f.text_field :address,placeholder: "東京都渋谷区代々木神園町0-0" %></td>
                    </div>
                 </tr>
                 <tr>
                    <div class="field">
                      <th><%= f.label "宛名" %></th>
                      <td><%= f.text_field :address,placeholder: "令和道子"%></td>
                    </div>
                 </tr>
               </table>
            <%= f.submit "確認画面へ進む", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>