<table>
  <thead>
    <tr>
      <th class="header1">注文履歴一覧</th>
    </tr>

  </thead>
</table>


<table>
  <thead>
    <tr>
      <th class="header1">注文日</th>
      <th class="header1">配送先</th>
      <th class="header1">注文商品</th>
      <th class="header1">支払金額</th>
      <th class="header1">ステータス</th>
      <th class="header1">注文詳細</th>

    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= order.postal_code %>
        <%= order.address %>
        <%= order.name %></td>

        <% order.order_items.each do |order_item| %>

        <td><%= order_item.item.name %></td>

        <% end %>


        <td><%= order.price %>円</td>
        <td><%= order.order_status %></td>
        <td><%= link_to "表示する", edit_public_order_path(order.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>