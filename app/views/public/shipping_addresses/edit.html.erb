<div class="container py-5">
  <div class="row">
    <div class="col-md-12">
      <h2 class="m-4 text-center font-weight-bold"><strong>配送先編集</strong></h2>
      <% if @shipping_address.errors.any? %>
        <%= @shipping_address.errors.count %>件のエラーが発生しました
        <ul>
          <% @shipping_address.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
          <%= form_with model: @shipping_address, url: public_shipping_address_path, method: :patch do |f| %>
          <div class="-flex align-items-center" >
               <table class="table table-bordered" style="color:white; text-align:center">
                 <tr>
                    <div class="field">
                      <th><%= f.label "郵便番号(ハイフンなし)" %></th>
                      <td><%= f.text_field :postal_code %></td>
                    </div>
                 </tr>
                 <tr>
                    <div class="field">
                      <th><%= f.label "住所" %></th>
                      <td><%= f.text_field :address %></td>
                    </div>
                 </tr>
                 <tr>
                    <div class="field">
                      <th><%= f.label "宛名" %></th>
                      <td><%= f.text_field :name %></td>
                    </div>
                 </tr>
               </table>
              </div>
               <div class="col pt-3 d-flex justify-content-center">
               <%= f.submit "変更内容を保存", class: 'btn btn-success' %>
              </div>
          <% end %>
</div>