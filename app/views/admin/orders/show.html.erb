<table>
  <thead>
    <tr>
      <th class="header1">注文履歴詳細</th>
    </tr>

  </thead>
</table>

<table>
  <thead>
    <tr>
      <th class="header1">購入者</th>
      <th class="header1">注文日</th>
      <th class="header1">配送先</th>
      <th class="header1">支払方法</th>
      <th class="header1">注文ステータス</th>
    </tr>
  </thead>

    <tbody>
      <tr>
        <td><%= link_to @order.name , admin_customer_path(@order.id) %></td>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= @order.postal_code %>
        <%= @order.address %>
        <%= @order.name %></td>

        <td><%= @order.payment_method_i18n  %></td>
        <%= form_with model: @order, url: admin_order_path(@order.id), method: :patch do |f| %>
        <td><%= f.select :order_status, Order.order_statuses.keys.map {|k| [I18n.t("enums.order.order_status.#{k}"), k]}, include_blank: "選択して下さい" %>

        <%= f.submit "更新", class: 'btn btn-success' %>
        </td>
        <% end %>
      </tr>
  </tbody>
</table>


<table>
  <thead>
    <tr>
      <th class="header1">商品名</th>
      <th class="header1">単価（税込）</th>
      <th class="header1">数量</th>
      <th class="header1">小計</th>
      <th class="header1">制作ステータス</th>
    </tr>
  </thead>
    <tbody>
      <% @order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.item.name %></td>
        <td><%= order_item.price %></td>
        <td><%= order_item.quantity %></td>

        <td><%= order_item.price * order_item.quantity %></td>

        <%= form_with model: order_item, url: admin_order_detail_path(order_item.id), method: :patch do |f| %>
        <td><%= f.select :production_status, OrderItem.production_statuses.keys.map {|k| [I18n.t("enums.order_item.production_status.#{k}"), k]}, include_blank: "選択して下さい" %>
        <%= f.submit "更新", class: 'btn btn-success' %>
        </td>
        <% end %>


      </tr>
      <% end %>
  </tbody>
</table>



<table>
  <thead>
    <tr>
      <th class="header1"></th>
    </tr>
  </thead>
  <tbody>
      <tr>

        <td>商品合計<%= @order.price - @order.postage %></td>
        <td>送料<%= @order.postage %></td>
        <td>請求金額 <%= @order.price %></td>
      </tr>
  </tbody>
</table>
