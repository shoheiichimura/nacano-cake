<table>
  <thead>
    <tr>
      <th class="header1">注文履歴一覧</th>
    </tr>

  </thead>
</table>

<table>
  <thead>
    <tr>
      <th class="header1">購入日時</th>
      <th class="header1">購入者</th>
      <th class="header1">注文個数</th>
      <th class="header1">注文ステータス</th>

    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= order.name %></td>

        <td><%= order.order_items.sum(:quantity) %></td>

        <td><%= order.order_status %></td>
      </tr>
    <% end %>
    <%= paginate @orders %>
  </tbody>
</table>