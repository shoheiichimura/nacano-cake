<table>
  <thead>
    <tr>
      <th class="header1">注文履歴一覧</th>
    </tr>

  </thead>
</table>

<table>
  <thead>
    <tr>
      <th class="header1">購入日時</th>
      <th class="header1">購入者</th>
      <th class="header1">注文個数</th>
      <th class="header1">注文ステータス</th>

    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.created_at.strftime('%Y/%m/%d') , admin_order_path(order.id) %></td>
        <td><%= order.name %></td>

        <td><%= order.order_items.sum(:quantity) %></td>

        <td><%= order.order_status_i18n  %></td>
      </tr>
    <% end %>
    <%= paginate @orders %>
  </tbody>
</table>