<h3>
 <%= @customer.last_name %><% @customer.first_name %>さんの会員詳細
</h3>

<table class="table table-striped">
  <tbody>
    <tr>
      <th scope="row">会員ID</th>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <th scope="row">氏名</th>
      <td><%= @customer.last_name %><% @customer.first_name %></td>
    </tr>
    <tr>
      <th scope="row">フリガナ</th>
      <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th scope="row">郵便番号</th>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th scope="row">住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th scope="row">電話番号</th>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <th scope="row">メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <th scope="row">会員ステータス</th>
      <td>
        <% if @customer.is_deleted %>
        <p class="text-black-50">退会</p>
        <% else %>
        <p class="text-success">有効</p>
        <% end %>
        </td>
    </tr>
  </tbody>
</table>

<%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success"%>
