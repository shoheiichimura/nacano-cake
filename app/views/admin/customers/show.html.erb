<div class="container pb-5">
 <div class="row">
  <div class="col-12 py-3 text-center ">
   <h3 class="m-4 font-weight-bold">
    <%= @customer.last_name %><% @customer.first_name %>さんの会員詳細
   </h3>
  </div>
  
   <div class="col-8 d-flex mx-auto">
    <table class="table table-striped  text-center " style="color:white;">
     <tbody>
       <tr>
         <th scope="row">会員ID</th>
         <td><%= @customer.id %></td>
         
       </tr>
       <tr>
         <th scope="row">氏名</th>
         <td><%= @customer.last_name %><% @customer.first_name %></td>
         
       </tr>
       <tr>
         <th scope="row">フリガナ</th>
         <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
         
       </tr>
       <tr>
         <th scope="row">郵便番号</th>
         <td><%= @customer.postal_code %></td>
         
       </tr>
       <tr>
         <th scope="row">住所</th>
         <td><%= @customer.address %></td>
        
       </tr>
       <tr>
        <th scope="row">電話番号</th>
        <td><%= @customer.phone_number %></td>
        
       </tr>
       <tr>
        <th scope="row">メールアドレス</th>
         <td><%= @customer.email %></td>

       </tr>
       <tr>
        <th scope="row">会員ステータス</th>
        <td><strong>
         <% if @customer.is_deleted %>
          <div class="text-danger">退会済</div>
         <% else %>
          <div class="text-success">有効</div>
         <% end %>
         </strong></td>
       </tr>
       <tr>
         <td><%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success"%></td>
         <td><%= link_to "注文履歴一覧を見る", admin_root_path, class: "btn btn-primary" %></td>
       </tr>
    </tbody>
  </table>
  </div>
  </div>


<!--↓注文履歴一覧のリンクまだ貼ってないよーん-->
