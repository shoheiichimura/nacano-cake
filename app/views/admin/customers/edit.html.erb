<div class="container">
 <div class="row">
  <div class="col">
   <h4 class="m-4 text-center font-weight-bold">
    <%= @customer.last_name %><% @customer.first_name %>さんの会員詳細
   </h4>
  </div>
  
  
　<table class="table table-striped">
 　 <tbody>
 　　  <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
 　　  <tr>
 　　    <th>会員ID</th>
 　　    <td><%= @customer.id %></td>
 　　  </tr>
 　　  <tr>
 　　    <th>氏名</th>
 　　    <td><%= f.text_field :last_name %> <%= f.text_field :first_name %>
 　　    </td>
 　　  </tr>
 　　  <tr>
 　　    <th>フリガナ</th>
 　　    <td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>
 　　  </tr>
 　　  <tr>
 　　    <th>郵便番号</th>
 　　    <td><%= f.text_field :postal_code %></td>
 　　  </tr>
 　　  <tr>
 　　    <th>住所</th>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= f.text_field :phone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.email_field :email %></td>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <td>
      <%= f.radio_button :is_deleted, :true %>
      <%= f.label :is_deleted, "有効", {value: :true, style: "display: inline-block;"} %>
      <%= f.radio_button :status, :false %>
      <%= f.label :is_deleted, "退会", {value: :false, style: "display: inline-block;"} %>
      </td>
      </td>
     </tr>
    </tbody>
   </table>
   <div class="container text-center">
    <%= f.submit "変更を保存", class: "btn btn-success"%>
    <% end %>
  </div>
 </div>
</div>