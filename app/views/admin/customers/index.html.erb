<div class="container">
 <div class="row">
  <div class="col">
   <h4 class="m-4 text-center font-weight-bold">会員一覧</h4>
  </div>
   <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">会員ID</th>
        <th scope="col">氏名</th>
        <th scope="col">メールアドレス</th>
        <th scope="col">ステータス</th>
      </tr>
    </thead>
    
    <tbody>
     <% @customers.each do |customer| %>
     <tr>
      <th scope="row"><%= customer.id %></th>
      <td>
        <%= link_to admin_customer_path(customer), class: "text-dark" do %>
        <%= customer.last_name %><% customer.first_name %></td>
      <td><%= customer.email %></td>
        <% end %>
      <td>
        <% if customer.is_deleted %>
         <p class="text-black-50">退会済</p>
         <% else %>
         <p class="text-success">有効</p>
         <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
