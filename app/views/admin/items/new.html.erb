<div class="container py-5" >
  <div class="row">
　 <h4 class="col mb-5 mt-3 text-center font-weight-bold">新規商品登録</h4>
    <% if @item.errors.any? %>
     <%= @item.errors.count %>件のエラーが発生しました
    <ul>
     <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>

<div class="row d-flex justify-content-center">
<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>

<table class="table text-center" style="margin:auto; color:white;">
 <tbody>
  <tr>
   <th>
    <div class="field">
    <%= f.label "商品画像" %>
   </th>
   <td><%= f.file_field :image, accept: "image/*" %>
   </div></td>
  </tr>
  <tr>
   <th>
    <div class="field">
    <%= f.label "商品名"%>
   </th>
   <td><%= f.text_field :name, placeholder: "商品名" %>
   </div></td>
  </tr>
  <tr>
   <th>
    <div class="field">
    <%= f.label "商品説明"%>
   </th>
   <td><%= f.text_area :detail,placeholder: "ここに説明文を記述します" %>
   </div></td>
  </tr>
  <tr>
   <th>
    <div class="field">
    <%= f.label "ジャンル" %>
   </th>
   <td><%=f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), include_blank: '選択してください' %>
   </div></td>
  </tr>
  <tr>
   <th>
    <div class="field">
    <%= f.label "税抜き価格"%>
   </th>
   <td><%= f.text_field :price, placeholder: "1000" %>
   </div></td>
  </tr>
  <tr>
   <th>
    <div class="form-group">
    <%=f.label:"販売ステータス" %>
   </th>
   <td><%= f.radio_button :status, :true %>
    <%= f.label :status, "販売中", {value: :true, style: "display: inline-block;"} %>
    <%= f.radio_button :status, :false %>
    <%= f.label :status, "販売停止中", {value: :false, style: "display: inline-block;"} %>
   </div></td>
  </tr>

</tbody>
</table>
<div class="row d-flex justify-content-center">
<%= f.submit "新規登録", class: 'btn btn-success' %>
<% end %>
</div>
</div>
</div>
 