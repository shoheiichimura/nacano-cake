<div class='container'>
  <div class="row">
   <%= flash[:notice] %>
　  <h4 class="col-lg-3 mb-5 mt-3 d-flex mx-auto">
     <span class="py-2 px-4 bg-ligh alert-secondary">商品詳細</span></h4>
      <div class="col-lg-12 d-flex justify-content-start">
       <%= image_tag @item.image, size: "300x300" %>
        <div class="col-lg-5 d-flex justify-content-end">
        <table class="ml-8" style="color:white;">
          <tbody>
           <tr>
             <th>商品名</th>
             <td><%= @item.name %></td>
            </tr>
            <tr>
             <th>
               商品説明
             </th>
             <td><%= @item.detail %></td>
            </tr>
            <tr>
             <th>
               ジャンル
             </th>
             <td><%= @item.genre.name %></td>
            </tr>
            <tr>
             <th>
               税込価格(税抜価格)
             </th>
             <td> <%=@item.with_tax_price.to_s(:delimited) %> (<%=@item.price.to_s(:delimited) %>)円</td>
            </tr>
            <tr>
               <th class='text-nowrap'>販売ステータス</th>
                <% if @item.status? %>
              <th class="text-success">販売中</th>
                <% else %>
              <th class="text-black-50">販売停止中
                <% end %>
             </tr>
              <tr>
               <th>
                <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-primary" %>
               </th>
              </tr>
             </tbody>
           </table>
         </div>
        </div>

